
<div class="card shadow h-100">
    <h5 class="card-header">
        Tin tức
    </h5>
    <div class="card-body">
        {{#if this.empty}}
        <p class="card-text">Tin tức chưa được cập nhật </p>
        {{else}}
        <div class="row">
            {{#each this.news}}
            <div class="col-sm-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <img src="/imgs/news/{{NewsID}}/main_thumbs.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{NewsTitle}}</h5>
                        <p class="card-text"><small class="text-muted">{{NewsDate}}</small></p>
                        <p class="card-text">{{TinyDes}}</p>
                    </div>
                    <div class="card-footer">

                        <a href="/news/{{NewsID}}" class="btn btn-primary">Đọc tiếp...</a>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
        {{/if}}
    </div>
</div>