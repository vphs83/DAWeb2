{{#section 'css'}}
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
{{/section}}

{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
<script>
    $(function () {
        $('#txtDOB').datetimepicker({
            format: 'L'
        });
    });
</script>


{{/section}}




<form  action="" method="post" >
    <div class="card shadow">
        <h5 class="card-header">
            Update Profile
        </h5>
        <div class="card-body">
            
            <hr class="mb-4">
            <h5 class="mb-3">Information</h5>
            <div class="form-group">
                <label for="txtName">Full Name</label>
                <input type="text" class="form-control" id="txtName" name="f_Name" placeholder="Full Name" value="{{authUser.f_Name}}" >
            </div>

            <div class="form-group">
                <label for="txtEmail">Email address</label>
                <input type="email" class="form-control" id="txtEmail" name="f_Email" aria-describedby="emailHelp"
                    placeholder="Enter email" value="{{authUser.f_Email}}" >
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>

            <div class="form-group">
                <label for="txtDOB">Date of Birth</label>
                <div class="input-group date" id="txtDOB" data-target-input="nearest">
                        <input type="text" class="form-control datetimepicker-input" name="dob" data-target="#txtDOB" value="{{authUser.f_DOB}}" />
                        <div class="input-group-append" data-target="#txtDOB" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                </div>
            </div>

        </div>
        <div class="card-footer text-right">

            <button type="submit" class="btn btn-success btn-block">
                <i class="fa fa-check" aria-hidden="true"></i>
                Update
            </button>
        </div>
    </div>

</form>