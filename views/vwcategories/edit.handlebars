<form action="/categories/update" method="post">
    <div class="card shadow ">
        <h5 class="card-header">
            Chỉnh sửa danh mục
        </h5>
        <div class="card-body">
            {{#if this.error}}
            <div class="alert alert-danger" role="alert">
                Invalid CategoryID <a href="/categories" class="alert-link">Trở về danh sách</a>
            </div>
            {{else}}
            <div class="form-group">
                <label for="txtCatID">#</label>
                <input readonly type="text" class="form-control" id="txtCatID" name="CatID"
                    value="{{this.category.CatID}}">
            </div>
            <div class="form-group">
                <label for="txtCatName">Tên danh mục</label>
                <input type="text" class="form-control" id="txtCatName" name="CatName" placeholder="name"
                    value="{{this.category.CatName}}">
            </div>
             </div>
            {{/if}}
            <div class="card-footer text-right">
                <a class="btn btn-outline-primary" href="/categories" role="button" title="Back">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                    Quay về
                </a>
                {{#unless this.error}}
                <button type="submit" class="btn btn-danger" formaction="/categories/delete">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                    Xoá
                </button>
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Lưu
                </button>
                {{/unless}}
            </div>
            
        </div>
</form>

